{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020", "DOM"],
        "module": "ESNext",
        "skipLibCheck": true,
        "paths": {
            "@domain/*": ["./src/domain/*"],
            "@utils/*": ["./src/utils/*"],
            "@lastfm/*": ["./src/lastfm/*"],
            "@gui/*": ["./src/gui/*"],
            "@ui-kit/*": ["./src/ui-kit/*"]
        },
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUncheckedIndexedAccess": true
    },
    "include": ["src", "tests"]
}
